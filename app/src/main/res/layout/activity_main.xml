<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="dailygoal.android.myapplicationdev.com.dailygoal.MainActivity"
    tools:layout_editor_absoluteX="8dp"
    tools:layout_editor_absoluteY="8dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Read up on materials before class"
                android:textStyle="bold"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Did I achieve this goal today?"
                android:textSize="20dp"/>

            <RadioGroup
                android:id="@+id/radioGroup1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radio1yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yes"
                    android:textSize="20dp"/>

                <RadioButton
                    android:id="@+id/radio1no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No"
                    android:textSize="20dp"/>

            </RadioGroup>

            <TextView
                android:id="@+id/textView2b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Arrive on time so as to not miss important part of lesson"
                android:textStyle="bold"
                android:textSize="20dp"/>


            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Did I achieve this goal today?"
                android:textSize="20dp"/>



            <RadioGroup
                android:id="@+id/radioGroup2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radio2yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yes"
                    android:textSize="20dp"/>

                <RadioButton
                    android:id="@+id/radio2no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No"
                    android:textSize="20dp"/>

            </RadioGroup>



            <TextView
                android:id="@+id/textView3b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Attempt the problem myself"
                android:textStyle="bold"
                android:textSize="20dp"/>


            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Did I achieve this goal today?"
                android:textSize="20dp"/>

            <RadioGroup
                android:id="@+id/radioGroup3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radio3yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yes"
                    android:textSize="20dp"/>

                <RadioButton
                    android:id="@+id/radio3no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No"
                    android:textSize="20dp"/>

            </RadioGroup>



            <TextView
                android:id="@+id/textView4b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="My personal reflection today"
                android:textStyle="bold"
                android:textSize="20dp"/>

            <EditText
                android:id="@+id/editTextReflection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textMultiLine" />

            <Button
                android:id="@+id/buttonOK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OK" />
        </LinearLayout>

    </ScrollView>


</LinearLayout>

